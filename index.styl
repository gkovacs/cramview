$video-height = 570px;
$scrollbar-height = 30px;
$thumbnail-height = 225px
$thumbnail-width = 400px;
$playbutton-width = 30px;

#reviewbuttongroup {
  position: absolute;
  right: 20px;
  bottom: 30px;
}

#rewatch_label {
  float: right;
  margin-right: 20px;
  margin-top: 8px;
}

#rewatch_button {
  float: right;
  margin-right: 20px;
}

#continue_button {
  float: right;
  margin-right: 20px;
}

#previewbuttongroup {
  position: absolute;
  right: 20px;
  bottom: 30px;
}

#watch_label {
  float: right;
  margin-right: 20px;
  margin-top: 8px;
}

#watch_button {
  float: right;
  margin-right: 20px;
}

#skip_button {
  float: right;
  margin-right: 20px;
}

#viewarea {
  //pointer-events: none;
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
}

#preview_area {
  display: none;
  position: absolute;
  left: 0px;
  top: 0px;
  z-index: -2;
  background-color: white;
  width: 1000px;
  height: $video-height;
}

#review_area {
  display: none;
  position: absolute;
  left: 0px;
  top: 0px;
  z-index: -2;
  background-color: white;
  width: 1000px;
  height: $video-height;
}

video#viewer {
  position: absolute;
  left: 0px;
  top: 0px;
  z-index: -3;
}

#controls_and_scrollbar {
  background-color: white;
  width: 1000px;
  height: $scrollbar-height;
  position: absolute;
  top: $video-height;
}

#historybar {
  background-color: pink;
  width: 1000px - $playbutton-width;
  height: $scrollbar-height;
  position: absolute;
  top: $video-height + $scrollbar-height;
  left: $playbutton-width;
}

#scrollbar {
  background-color: lightblue;
  width: 1000px - $playbutton-width;
  height: $scrollbar-height;
  position: absolute;
  top: 0px;
  left: $playbutton-width;
}

