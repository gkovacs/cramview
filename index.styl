  //-webkit-box-sizing: border-box;
}

#thumbnails {
  background-color: black;
  position: absolute;
  left: 0px;
  width: 1000px;
  height: $thumbnail-height;
  top: $video-height - $thumbnail-height - $scrollbar-height;
}

#questionbar {
  background-color: black;
  color: white;
  display: none;
  position: absolute;
  top: $video-height - $scrollbar-height;
  left: 0px;
  width: 1000px;
  height: $scrollbar-height;
}

.sectionProgressBarMarker {
  pointer-events: none;
  background-color: white;
  position: absolute;
  top: 0px;
  left: 0px;
  z-index: 3;
  width: 3px;
  height: $scrollbar-height;
}

#progresstick {
  pointer-events: none;
  background-color: black;
  position: absolute;
  top: 0;
  left: 0px;
  z-index: 4;
  width: 3px;
  height: $scrollbar-height * 2;
}

#seekprogresstick {
  pointer-events: none;
  background-color: yellow;
  position: absolute;
  top: 0;
  left: 0px;
  z-index: 5;
  width: 3px;
  height: $scrollbar-height * 2;
}

.watchedMarker {
  pointer-events: none;
  background-color: red;
  position: absolute;
  top: 0px;
  left: 0px;
  z-index: 3;
  height: $scrollbar-height;
}
